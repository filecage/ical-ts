{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "paths": {
            "ts-xor": ["./src/Types/XOR.ts"]
        }
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "compiler/**/*.ts"
    ]
}